---
import Layout from '../layouts/Layout.astro';
import ArfidStatsWidget from '../widgets/ArfidStatsWidget';
import ProgressThisMonthWidget from '../widgets/ProgressThisMonthWidget';
import RecentSafeFoodsWidget from '../widgets/RecentSafeFoodsWidget';
---

<Layout title="ARFID Dashboard - MyFoodMap" showSearch={false}>
	<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
		<!-- Header -->
		<div class="bg-white shadow-xs border-b">
			<div class="container mx-auto px-4 py-6">
				<div class="flex items-center justify-between">
					<div>
						<h1 class="text-3xl font-bold text-gray-900">ARFID Dashboard</h1>
						<p class="text-gray-600 mt-1">Safe food exploration and support for the whole family</p>
					</div>
					<div class="text-right">
						<p class="text-sm text-gray-500">Welcome back,</p>
						<p class="text-lg font-semibold text-indigo-600">Emma Johnson</p>
					</div>
				</div>
			</div>
		</div>

		<!-- Quick Stats -->
		<div class="container mx-auto px-4 py-8">
			<ArfidStatsWidget client:load />

			<!-- Main Content Grid -->
			<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
				<!-- Main Content -->
				<div class="lg:col-span-2 space-y-8">
					<!-- Safe Foods Section -->
					<div class="bg-white rounded-lg shadow-md p-6">
						<div class="flex items-center justify-between mb-6">
							<div>
								<h2 class="text-xl font-semibold text-gray-900">My Safe Foods</h2>
								<p class="text-sm text-gray-600 mt-1">Currently exploring and established safe foods</p>
							</div>
							<a href="/safe-foods" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
								Manage Safe Foods
							</a>
						</div>
						<RecentSafeFoodsWidget client:visible />
						<div class="mt-6 text-center">
							<a href="/safe-foods" class="text-indigo-600 hover:text-indigo-800 font-medium text-sm">
								See all safe foods →
							</a>
						</div>
					</div>
				</div>

				<!-- Side Panel -->
				<div class="space-y-8">
					<!-- Recent Meal Log -->
					<div class="bg-white rounded-lg shadow-md p-6">
						<div class="flex items-center justify-between mb-4">
							<h3 class="text-lg font-semibold text-gray-900">Recent Meals</h3>
						</div>
						<div class="space-y-4">
							<div class="flex items-start space-x-3">
								<div class="shrink-0 w-2 h-2 bg-green-500 rounded-full mt-2"></div>
								<div class="flex-1 min-w-0">
									<p class="text-sm font-medium text-gray-900">Breakfast - Today</p>
								</div>
								<div class="shrink-0">
									<span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
										Success
									</span>
								</div>
							</div>
							<div class="ml-5">
								<p class="text-sm text-gray-600">White bread rolls with butter</p>
							</div>
							<div class="flex items-start space-x-3">
								<div class="shrink-0 w-2 h-2 bg-green-500 rounded-full mt-2"></div>
								<div class="flex-1 min-w-0">
									<p class="text-sm font-medium text-gray-900">Dinner - Yesterday</p>
								</div>
								<div class="shrink-0">
									<span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
										Success
									</span>
								</div>
							</div>
							<div class="ml-5">
								<p class="text-sm text-gray-600">Pasta with butter</p>
							</div>
						</div>
						<div class="mt-6 space-y-2">
							<a href="/meal-log" class="block text-center text-indigo-600 hover:text-indigo-800 font-medium text-sm">
								Log new meal →
							</a>
							<a href="/food-diary" class="block text-center text-green-600 hover:text-green-800 font-medium text-sm">
								View full food diary →
							</a>
						</div>
					</div>

					<!-- Quick Actions -->
					<div class="bg-white rounded-lg shadow-md p-6">
						<h3 class="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h3>
						<div class="space-y-3">
							<a href="/meal-log" class="w-full flex items-center justify-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium">
								<svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
								</svg>
								<span>Log meal</span>
							</a>
							<a href="/safe-foods" class="w-full flex items-center justify-center px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors font-medium">
								<svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
								</svg>
								<span>Manage Safe Foods</span>
							</a>
							<a href="/nutrition" class="w-full flex items-center justify-center px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors font-medium">
								<svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
								</svg>
								<span>Nutrition Overview</span>
							</a>
						</div>
					</div>

					<!-- Progress Tracker -->
					<ProgressThisMonthWidget client:visible />
				</div>
			</div>

			<!-- ARFID Resources Section -->
			<div class="mt-12 bg-white rounded-lg shadow-md p-8">
				<div class="text-center mb-8">
					<div class="flex items-center justify-center mb-4">
						<h2 class="text-xl font-semibold text-gray-900">ARFID Resources & Support</h2>
					</div>
					<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-6">
						<div class="bg-blue-50 rounded-lg p-6 text-center">
							<div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mx-auto mb-4">
								<svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
								</svg>
							</div>
							<h3 class="text-lg font-semibold mb-2">Exploration Guides</h3>
							<p class="text-gray-600 text-sm">Step-by-step guides to try new textures and flavors in a safe way.</p>
						</div>
						<div class="bg-green-50 rounded-lg p-6 text-center">
							<div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mx-auto mb-4">
								<svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
								</svg>
							</div>
							<h3 class="text-lg font-semibold mb-2">Family Support</h3>
							<p class="text-gray-600 text-sm">Tips and strategies for the whole family. Advice from other ARFID families.</p>
						</div>
						<div class="bg-purple-50 rounded-lg p-6 text-center">
							<div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mx-auto mb-4">
								<svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
								</svg>
							</div>
							<h3 class="text-lg font-semibold mb-2">Health Reports</h3>
							<p class="text-gray-600 text-sm">Generate reports for healthcare providers with nutrition and progress data.</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</Layout>

<style>
	.container {
		max-width: 1200px;
	}
</style>