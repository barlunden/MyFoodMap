---
import Layout from '../layouts/Layout.astro';
---

<Layout title="ARFID Dashboard - MyFoodMap" showSearch={false}>
	<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
		<!-- Header -->
		<div class="bg-white shadow-sm border-b">
			<div class="container mx-auto px-4 py-6">
				<div class="flex items-center justify-between">
					<div>
						<h1 class="text-3xl font-bold text-gray-900">ARFID Dashboard</h1>
						<p class="text-gray-600 mt-1">Safe food exploration and support for the whole family</p>
					</div>
					<div class="text-right">
						<p class="text-sm text-gray-500">Welcome back,</p>
						<p class="text-lg font-semibold text-indigo-600">Emma Johnson</p>
					</div>
				</div>
			</div>
		</div>

		<!-- Quick Stats -->
		<div class="container mx-auto px-4 py-8">
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
				<div class="bg-white rounded-lg shadow-md p-6">
