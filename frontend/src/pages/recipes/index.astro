---
import Layout from '../../layouts/Layout.astro';
import SafeRecipeList from '../../components/SafeRecipeList';
---

<Layout title="All Recipes - MyFoodMap">
	<main class="container mx-auto px-4 py-8">
		<div class="mb-8">
			<h1 class="text-4xl font-bold text-gray-900 mb-4">All Recipes</h1>
			<p class="text-xl text-gray-600 max-w-2xl">
				Browse your complete recipe collection with smart scaling and nutrition tracking.
			</p>
		</div>
		
		<SafeRecipeList client:only="react" />
	</main>
</Layout>