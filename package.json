{
  "name": "myfoodmap",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:all": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:all": "npm run build:frontend && npm run build:backend",
    "build:netlify": "npm run install:all && cd netlify/functions && npm install && npx prisma generate --schema=./prisma/schema.prisma && cd ../../ && npm run build:frontend",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "install:all": "npm run install:frontend && npm run install:backend",
    "db:migrate": "prisma migrate dev --schema=./shared/prisma/schema.prisma",
    "db:studio": "prisma studio --schema=./shared/prisma/schema.prisma",
    "db:generate": "prisma generate --schema=./shared/prisma/schema.prisma",
    "db:reset": "prisma migrate reset --force --schema=./shared/prisma/schema.prisma"
  },
  "prisma": {
    "seed": "tsx shared/prisma/seed.ts"
  },
  "devDependencies": {
    "@netlify/functions": "^4.2.7",
    "astro": "^5.14.1",
    "concurrently": "^9.1.0",
    "prisma": "^5.22.0"
  }
}
